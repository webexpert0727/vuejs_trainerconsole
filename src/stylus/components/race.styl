@import '../base/variables'

.race
  lost-column 3/12 0 30px flex
  margin-bottom 30px
  background url(../images/runner.jpg)
  background-position center
  background-size cover
  border 1px solid $gray
  border-radius 4px
  box-shadow 4px 2px 6px 0 rgba(0, 0, 0, 0.1)

  &__empty
    lost-column 12/12 0 15px flex
    padding 30px 0
    text-align center
    font-size 20px
    font-family 'Avenir'
    color $text-color

  &__info
    padding 20px 30px
    width 100%
    height 100%
    padding 20px 30px
    background rgba(#000, 0.6)
    color #fff
    text-align center

    .name
      font-size 24px
      font-family 'Avenir'

    .type, .date
      font-size 14px
      font-family 'Avenir'

  &__button
    text-align center
    padding 16px 0 0
    font-family 'Avenir'

.confirmation
    label
        display block

.confirm-container
    padding: 0 !important
