@import '../base/variables'

.navbar
  background $primary
  padding 15px 0
  backdrop-filter saturate(180%) blur(20px)

  .logo
    padding-right 15px
    border-right 2px solid rgba(255, 255, 255, .5)
    flex 1 0 auto
    max-width 100px

    a
      display block
      cursor pointer

      img
        max-width 80px
        width 100%
        display block

  .navigation
    padding-left 15px
    flex 1 0 auto

    h3
      font-size 18px
      color #fff
      text-transform uppercase
      display block

    .menu
      padding 0
      margin 0

      li
        list-style none
        display inline-block

        a
          padding 8px 15px
          text-decoration none
          color #fff
          cursor pointer
          text-transform uppercase
          font-size 14px
          display block

          &:hover, &:focus
            opacity .8

          &:first-child
            padding 8px 15px 8px 0


  .user
    flex 1 0 auto
    max-width 300px
    text-align right

    .flex
      justify-content flex-end

      .group
        display inline-block
        padding-right 15px
        flex 1 0

        .name
          display block
          color #fff
          padding 5px 5px 0
          cursor pointer
          text-transform uppercase
          font-size 14px

        .logout
          padding 5px
          color #fff
          cursor pointer
          text-transform uppercase
          font-size 12px

          &:hover, &:focus
            opacity .8

      img
        display inline-block
        max-width 60px
        width 60px
        height 60px
        border-radius 100%
        flex 1 0
